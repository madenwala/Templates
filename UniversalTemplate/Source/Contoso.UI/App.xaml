<ui:App
    x:Class="Contoso.UI.App"
    xmlns:ui="using:AppFramework.UI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resources="using:Contoso.UI.Resources">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <resources:Common />
                <resources:TextStyles />
                <resources:DataTemplates />
                <resources:ListStyles />
                <resources:ControlStyles />
                <resources:DeviceSpecificOverrides />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</ui:App>
