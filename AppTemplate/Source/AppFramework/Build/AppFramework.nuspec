<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata minClientVersion="2.5">
    <id>AppFramework</id>
    <version>0.0.0-SpecifyVersionOnCommandline</version>
    <title>AppFramework SDK</title>
    <authors>Mohammed Adenwala</authors>
    <owners>Mohammed Adenwala</owners>
    <licenseUrl>https://github.com/madenwala/Templates/tree/master/UniversalTemplate</licenseUrl>
    <projectUrl>https://github.com/madenwala/Templates/tree/master/UniversalTemplate</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>AppFramework for building UWP applications</description>
    <copyright>Copyright 2017</copyright>
    <tags>Adenwala</tags>
    <releaseNotes>More info at https://github.com/madenwala/Templates/tree/master/UniversalTemplate </releaseNotes>
    <!--<iconUrl>http://githubusercontent.com/dotnet/WinGASDK/master/TODO_logo_240.png</iconUrl>-->

    <dependencies>
      
      <group targetFramework="MonoAndroid">
        <!--MonoAndroid dependencies go here-->
        <dependency id="Newtonsoft.Json" version="10.0" />
      </group>
      <group targetFramework="Xamarin.iOS10">
        <!--Xamarin.iOS10 dependencies go here-->
        <dependency id="Newtonsoft.Json" version="10.0" />
      </group>
      <group targetFramework="uap">
        <!--uap dependencies go here-->
        <dependency id="Newtonsoft.Json" version="10.0" />
        <dependency id="Microsoft.NETCore.UniversalWindowsPlatform" version="5.3.1" />
        <dependency id="Microsoft.Services.Store.SDK" version="10.1703.19001" />
        <dependency id="Microsoft.Xaml.Behaviors.Uwp.Managed" version="2.0.0" />
        <dependency id="Microsoft.Toolkit.Uwp" version="1.4.0" />
        <dependency id="Microsoft.Toolkit.Uwp.UI.Controls" version="1.4.0" />
        <dependency id="NotificationsExtensions.Win10" version="14332.0.2" />
        <dependency id="HockeySDK.UWP" version="4.1.6" />
        <dependency id="UWP.SDKforGoogleAnalytics.Managed" version="1.5.2" />
        <dependency id="AdDuplexWin10" version="10.1.1" />
      </group>
    </dependencies>
    
  </metadata>

  <files>

    <!-- XAML controls -->
    <file target="lib\uap10.0\AppFramework\Themes\" src="AppFramework.Uwp\Themes\*.xaml" />
    
    <!-- The lib file gets copied as a reference -->
    <file target="lib\uap10.0\AppFramework.Uwp\"	src="AppFramework.Uwp\bin\x86\debug\*.xr.xml" />
    <file target="lib\uap10.0\" src="AppFramework.Uwp\bin\x86\debug\*" />
    
    <!-- Change DLLs to have their platform version removed by using the corflags command https://github.com/NuGet/Home/issues/1221 -->
    <!--<file target="lib\uap10.0\" src="Build\Temp\*.dll" />-->
    
    <!--Copy all the output to each platform folder-->
    <file target="runtimes\win10-x64\lib\uap10.0\"	src="AppFramework.Uwp\bin\x64\debug\*" />
    <file target="runtimes\win10-x86\lib\uap10.0\"	src="AppFramework.Uwp\bin\x86\debug\*" />
    <file target="runtimes\win10-arm\lib\uap10.0\"	src="AppFramework.Uwp\bin\arm\debug\*" />
        
  </files>

</package>